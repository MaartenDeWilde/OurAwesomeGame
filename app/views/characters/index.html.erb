<h1>Listing characters</h1>

<table>
  <tr>
    <th>Char name</th>
    <th>Char experience</th>
    <th>Char race</th>
    <th>Char class</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%= character.char_name %></td>
    <td><%= character.char_experience %></td>
    <td><%= character.char_race %></td>
    <td><%= character.char_class %></td>
    <td><%= link_to 'Show', character %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Destroy', character, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

